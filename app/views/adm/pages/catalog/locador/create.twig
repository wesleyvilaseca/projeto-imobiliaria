{% extends './adm/template.twig' %}
{% block body %}

	{% for content in html %}
		{{ content | raw }}
	{% endfor %}

	<div class="top-title text-end">
		<a href="{{ route_back }}" class="btn btn-sm btn-dark">
			<i class="fas fa-angle-left me-1"></i>
			voltar
		</a>
	</div>

	<div>
		<form method="POST" action="{{ action }}">
			<div class="form-group mb-2">
				<small class="control-label">Nome *</small>
				<div>
					<input class="form-control form-control-sm" name="nome" type="text" style="width:100%" value="{{ old ? old.nome : locador ? locador.nome : ''}}">
				</div>
			</div>

			<div class="form-group mb-2">
				<small class="control-label">Email *</small>
				<div>
					<input class="form-control form-control-sm" name="email" type="email" style="width:100%" value="{{ old ? old.email : locador ? locador.email : ''}}">
				</div>
			</div>

			<div class="form-group mb-2">
				<small class="control-label">Celular *</small>
				<div>
					<input class="form-control form-control-sm telefone" id="telefone" name="telefone" type="text" style="width:100%" value="{{ old ? old.telefone : locador ? locador.telefone : ''}}" minlength="15" required>
				</div>
			</div>

			<div class="form-group mb-2">
				<small class="control-label">Data repasse * (dia do mÃªs que o repasse precisa acontecer)</small>
				<div>
					<input class="form-control form-control-sm data_repasse" id="data_repasse" name="data_repasse" type="number" style="width:100%" value="{{ old ? old.data_repasse : locador ? locador.data_repasse : ''}}" placeholder="05" minlength="0"  maxlength="31" required>
				</div>
			</div>

			<hr>
			<div class="row">
				<div class="col-xl-6 col-md-12 mt-2">
					<button type="submit" class="btn btn-sm btn-primary">{{ locador ? 'Editar' : 'Salvar'}}</button>
				</div>
			</div>
			<input name="id" type="hidden" style="width:100%" value="{{ locador ? locador.id : ''}}">
		</form>
	</div>

	{{js | raw}}


	<script>
		$(document).ready(function () {
			$('.telefone').mask('(00) 00000-0000');
		});
	</script>

{% endblock %}
